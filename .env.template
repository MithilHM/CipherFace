# Environment variables template
# Copy this file to .env and fill in the values

# =============================================================================
# Database Configuration
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=face_db

# =============================================================================
# Application Secrets
# =============================================================================
# IMPORTANT: Change these in production!
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET=your-jwt-secret-here-change-in-production

# Database encryption key for pgcrypto (min 32 characters)
# CRITICAL: Store securely in production (use KMS)
DB_ENCRYPTION_KEY=your-32-character-encryption-key!

# =============================================================================
# FHE Parameters (CKKS Encryption)
# =============================================================================
CKKS_POLY_DEGREE=8192
CKKS_MULT_DEPTH=5

# =============================================================================
# Redis Configuration (for consent caching)
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# Application Settings
# =============================================================================
FLASK_ENV=development
FLASK_DEBUG=true
PORT=5000

# SQL query logging (development only)
SQL_DEBUG=false

# Skip database seed data
SKIP_SEED=false

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# =============================================================================
# Consent Settings
# =============================================================================
# Consent cache TTL in seconds
CONSENT_CACHE_TTL=60

# Consent expiration warning days
CONSENT_WARNING_DAYS=7

# Maximum consent validity in days
MAX_CONSENT_DAYS=365

# =============================================================================
# DPDP Compliance Settings
# =============================================================================
# Audit log retention period in years
AUDIT_LOG_RETENTION_YEARS=7

# Soft delete grace period in days before hard deletion
SOFT_DELETE_GRACE_DAYS=30

# Enable detailed audit logging
AUDIT_DETAILED_LOGGING=true
